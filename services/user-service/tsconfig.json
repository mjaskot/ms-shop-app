{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2018",
    "lib": ["es2017"],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["*/node_modules", "**/*.spec.ts"]
}
